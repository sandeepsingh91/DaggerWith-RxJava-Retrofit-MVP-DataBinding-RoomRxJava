<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="insert"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="32dp"/>

        <Button
            android:id="@+id/load_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="get all"
            app:layout_constraintTop_toBottomOf="@+id/add_user"
            tools:layout_editor_absoluteX="40dp"/>

        <Button
            android:id="@+id/load_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="get by ids"
            app:layout_constraintTop_toBottomOf="@+id/load_user"
            tools:layout_editor_absoluteX="40dp"/>

        <Button
            android:id="@+id/load_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="find by name"
            app:layout_constraintTop_toBottomOf="@+id/load_user_id"
            tools:layout_editor_absoluteX="40dp"/>
    </android.support.constraint.ConstraintLayout>
</layout>